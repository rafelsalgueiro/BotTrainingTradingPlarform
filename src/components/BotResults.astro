<iframe id="iframe-content" src="/src/pages/posts/test.htm" class="w-full border-none"></iframe>
<script>

    const iframe = document.getElementById('iframe-content');
    
    // Ajusta la altura inicialmente
    resizeIframe();
    
    // Funci√≥n para ajustar la altura del iframe
    function resizeIframe() {
        if (iframe) {
            iframe.style.height = (iframe.contentWindow.document.body.scrollHeight + 10) + 'px';
        }
    }
    
    // Escucha eventos de carga del iframe para ajustar la altura cuando el contenido cambia
    iframe?.addEventListener('load', resizeIframe);

</script>
